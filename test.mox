fun id1(x) = x
fun double(x) = x + x
fun quadruple(x) = double(double(x))

fun fac1(n) = case n | 0 -> 1
                     | _ -> n * fac1(n-1)

fun fac(0) = 1
  | fac(n) = n * fac(n-1)

rec fun even(0) = True
      | even(n) = odd(n-1)
and fun odd(0) = False
      | odd(n) = even(n-1)

val zero = if True then 0 else 1
val one = if False then 0 else 1

